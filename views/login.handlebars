<link href="https://getbootstrap.com/docs/5.1/examples/sign-in/signin.css" rel="stylesheet">

<main class="form-signin text-center">
    <form>
        <img class="mb-4" src="./img/people-arrows-solid.svg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <div class="form-floating">
            <input type="email" class="form-control" id="emailField" placeholder="name@example.com">
            <label for="emailField">Email address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="passwordField" placeholder="Password">
            <label for="passwordField">Password</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit" id="signInBtn">Sign in</button>
    </form>
</main>
